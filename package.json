{
  "name": "lumina-monorepo",
  "version": "1.7.1",
  "private": true,
  "packageManager": "bun@1.2.8",
  "workspaces": [
    "app",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "cd app && bun run tauri dev",
    "build:web": "turbo run build:web",
    "test": "turbo run test",
    "start:server:production": "ncp dist/public server/public && cd server && bun run start",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev:backend": "dotenv turbo run dev --filter=@lumina/backend",
    "dev:frontend": "dotenv turbo run dev --filter=@lumina/frontend",
    "postinstall": "turbo run prisma:generate --filter=@lumina/backend",
    "setup": "bun install",
    "prisma:generate": "cd prisma && prisma generate",
    "prisma:migrate:dev": "cd prisma && prisma migrate dev",
    "prisma:migrate:deploy": "cd prisma && prisma migrate deploy",
    "prisma:studio": "cd prisma && prisma studio",
    "build:seed": "tsup prisma/seed.ts --outDir dist",
    "seed": "bun dist/seed.js",
    "build:lumina:types": "tsc -p tsconfig.lumina.json"
  },
  "devDependencies": {
    "@types/lru-cache": "^7.10.10",
    "concurrently": "^9.1.2",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "turbo": "latest",
    "typescript": "^5.1.6",
    "vite-plugin-pwa": "^1.0.0",
    "workbox-window": "^7.3.0"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@blocksuite/blocks": "^0.19.5",
    "@blocksuite/editor": "^0.10.0",
    "@blocksuite/global": "^0.22.4",
    "@blocksuite/store": "^0.22.4",
    "@prisma/client": "5.22.0",
    "@tanstack/react-virtual": "^3.13.16",
    "dotenv": "^16.5.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^4.0.0",
    "lru-cache": "^11.1.0",
    "prisma": "5.22.0",
    "react-i18next": "^15.4.1",
    "react-simple-pull-to-refresh": "^1.3.3",
    "recharts": "^3.6.0",
    "wait-on": "^8.0.3"
  }
}